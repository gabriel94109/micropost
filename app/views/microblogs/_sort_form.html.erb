<% form_tag microblogs_path, :method => 'get' do -%>
  <p>
    <% ['created_at', 'vote_score', 'replies'].each do |sort| %>
      <%= radio_button_tag 'sort', sort, @sort == sort %>
      <%= label_tag 'sort'+'_'+sort, sort.humanize %>
    <% end -%>
    <%= hidden_field_tag :search, params[:search] %>
    <%= submit_tag 'Sort' %>
  </p>
<% end -%>
